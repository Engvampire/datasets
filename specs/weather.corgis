metadata:
    version: 1
    name: Weather
    builder: Python
    author: Austin Cory Bart <acbart@vt.edu>
    datetime: 11/12/2015
    tags: [weather, united states, climate, temperature]
    description:
        overview: 
            The Weather library is all about some interesting weather data. The weather is collected from the US weather system, so it is only available for the United States.
http:
  - name: forecastgov
    url: http://forecast.weather.gov/MapClick.php
    args:
      - name: lat
        type: float
        description: The latitude
        form: query
      - name: lon
        type: float
        description: The longitude
        form: query
      - name: FcstType
        type: string
        description: A hidden parameter that controls the result format.
        default: '"json"'
        form: query
        visible: false
    verb: get
    cache: timed(600)
interfaces:
  - name: get report
    description: Gets a report on the current weather, forecast, and more detailed information about the location.
    returns: report
    production:
        pre: geocode(city, lat, lon)
        http: forecastgov
        post: json()
    cache:
      - '"Blacksburg, VA"'
      - '"Newark, DE"'
      - '"San Francisco, CA"'
      - '"Miami, FL"'
    args:
      - name: city
        type: string
        description: The name of the city you want to get information about.
        default: '"Blacksburg, VA"'
        indexed: true
  - name: get_temperature
    returns: integer
    cache:
      - '"Blacksburg, VA"'
      - '"Newark, DE"'
      - '"San Francisco, CA"'
      - '"Miami, FL"'
    production:
        pre: geocode(city, lat, lon)
        http: forecastgov
        post: json()|jsonpath(data.temperature.[0])
    args:
      - name: city
        type: string
        description: The name of the city you want to get information about.
        default: '"Blacksburg, VA"'
        indexed: true
